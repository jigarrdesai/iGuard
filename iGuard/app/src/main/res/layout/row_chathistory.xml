<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:background="@color/efefef" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp" >


        <TextView
            android:id="@+id/rowchathistory_txtMessageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingLeft="@dimen/margin_15dp"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/margin_15dp"
            android:textSize="@dimen/font_15dp"
            android:background="@drawable/chat_text_bg_1"
            android:gravity="left"
            android:text="nan lavjan an an nal nalna naajfsa l" />

        <TextView
            android:id="@+id/rowchathistory_txtMessageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_below="@+id/rowchathistory_txtMessageLeft"
            android:textSize="@dimen/font_15dp"
            android:background="@drawable/chat_text_bg_2"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:text="nan lavjan an an nal nalna naajfsa l" />

    </RelativeLayout>
</LinearLayout>